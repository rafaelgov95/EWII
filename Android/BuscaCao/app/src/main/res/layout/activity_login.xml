<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.rv.buscacao.Login">

    <QuickContactBadge
        android:id="@+id/quickContactBadge"
        android:layout_width="300dp"
        android:layout_height="175dp"
        app:srcCompat="@mipmap/ic_pata"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="234dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/login_view"
        android:layout_alignEnd="@+id/login_view"
        android:layout_alignLeft="@+id/quickContactBadge"
        android:layout_alignStart="@+id/quickContactBadge" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="316dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/login_button"
        android:layout_alignLeft="@+id/login_email"
        android:layout_alignStart="@+id/login_email"
        android:layout_alignRight="@+id/login_email"
        android:layout_alignEnd="@+id/login_email" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logar"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="383dp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/login_view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/login_view"
        android:layout_width="289dp"
        android:layout_height="47dp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="444dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

</RelativeLayout>

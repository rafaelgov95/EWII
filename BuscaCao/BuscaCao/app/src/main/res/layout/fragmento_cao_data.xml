<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/cao_list_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/cao_data_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#575294"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/cao_data_dono"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#575294"
        android:fontFamily="sans-serif-condensed"

        android:layout_below="@+id/cao_data_nome"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:id="@+id/cao_data_date_nasc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#575294"
        android:textSize="15dp"

        android:layout_below="@+id/cao_data_dono"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/cao_data_date_p"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


        android:fontFamily="sans-serif-condensed"
        android:textColor="#575294"
        android:textSize="15dp"
        android:layout_below="@+id/cao_data_date_nasc"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/thumbnail"
        android:text="Data SumiÃ§o: " />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/thumbnail"
        android:text="Nome: " />

        <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cao_data_date_nasc"
        android:layout_toEndOf="@+id/thumbnail"
        android:text="Data Nascimento: " />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cao_data_dono"
            android:layout_alignBottom="@+id/cao_data_dono"
            android:layout_toEndOf="@+id/thumbnail"
            android:text="Dono:" />

        <ImageButton
            android:id="@+id/ib_popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>